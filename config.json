{
  "csiEndpointDir": "/run/csi-proxy",
  "nodeIDEnvVar": "CSI_NODE_ID",      // or omit to fallback to hostname
  "drivers": {
    "smb": {
      "image": "registry.k8s.io/sig-storage/smbplugin:v1.18.0",
      "driverName": "smb",
      "options": {
        "source": "//10.10.10.100/data"
      },
      "secrets": {
        "username": "smbuser",
        "password": "P@ssw0rd!"
      },
      "startCommand": [
        "--v=5",
        "--enable-get-volume-stats=false"
      ]
    },
    "nfs": {
      "image": "registry.k8s.io/sig-storage/nfsplugin:v2.0.0",
      "driverName": "nfs",
      "options": {
        "server": "nfs.example.com",
        "share": "/export"
      },
      "secrets": {},
      "startCommand": []
    }
  }
}
